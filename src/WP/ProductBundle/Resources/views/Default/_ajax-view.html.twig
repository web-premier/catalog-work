<div id="catalog-popup" class="catalog-popup" style="display: block;">
    <div class="catalog-popup-content">
        <div class="catalog-popup-poduct">
            <div class="catalog-popup-image">
                <div class="catalog-popup-big-image js-big-image">
                    <img src="{% path product.cover, 'ajax_medium' %}" alt="">
                </div>
                {% if product.images|length>0 %}
                    <div class="catalog-popup-image-slider-wrap">
                        <ul class="catalog-popup-image-slider">
                            <li class="catalog-popup-image-slider-item checked"><a href="{% path product.cover, 'ajax_medium' %}"><img src="{% path product.cover, 'small' %}" alt=""></a></li>
                            {% for image in product.images %}
                                <li class="catalog-popup-image-slider-item"><a href="{% path image.image, 'ajax_medium' %}"><img src="{% path image.image, 'small' %}" alt=""></a></li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
            </div>
            <div class="catalog-popup-info">
                <div class="catalog-popup-subtitle">{{ product.title }}</div>
                <div class="catalog-popup-price"><span>{{ product.price }}</span> руб.</div>
                <div class="catalog-popup-item-num">
                    <input type="text" class="catalog-item-num-input input js-add-count-{{ product.id }}" value="1">
                    <a href="#" class="catalog-item-num-plus js-num-plus"><span class="icon plus-icon"></span></a>
                    <a href="#" class="catalog-item-num-minus js-num-minus"><span class="icon minus-icon"></span></a>
                </div>
                <a href="#" class="grad-button catalog-popup-button" onclick="cartAdd({{ product.id }});return false;"><span class="icon buy-icon js-add-btn-{{ product.id }} {% if cart.items[product.id] is defined %}inCart{% endif %}"></span> В КОРЗИНУ</a>

