<script type="text/javascript">
    $(document).ready(function(){
        $('.catalog-popup-image-slider').bxSlider({
            pager: false,
            slideWidth: 89,
            slideMargin: 2,
            minSlides: 2,
            maxSlides: 3
        });

        $('.catalog-popup-image-slider-item').delegate('a','click',function(){
            $(this).parent().parent().children().removeClass('checked');
            $(this).parent().addClass('checked');
            $('.js-big-image img').attr('src', $(this).attr('href'));
            return false;
        });
    });

</script>