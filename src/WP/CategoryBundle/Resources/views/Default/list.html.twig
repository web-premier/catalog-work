{% extends 'WPTemplateBundle::base.html.twig' %}

{% block content %}
    <div class="wrapper">
        <div class="catalog-inner-page clearfix">
            <div class="catalog-iner-wrap clearfix">
                <aside class="sidebar">
                    <ul class="sidebar-menu">
                        {% for cat in categories %}
                            <li class="{% if category.parent and cat.id == category.parent.id %}startActive{% endif %}">
                                <a href="#">{{ cat.title }}</a>
                                <ul class="dropDownSidebar-menu">
                                    {% for child in cat.children %}
                                        <li {% if child.id == category.id %}class="activeDrop"{% endif %}>
                                            <a href="{{ path('catalog_list', {'id': child.id, 'slug': child.slug}) }}">{{ child.title }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </li>
                        {% endfor %}
                    </ul>
                    <div class="filters">
                        <div class="filters-block">
                            <div class="filters-title">
                                ТИП:
                            </div>
                            <div class="filters-content">
                                <div class="filters-check-item">
                                    <input type="checkbox" id="filter1" checked="checked">
                                    <label for="filter1">Стразовые в серебре</label>
                                </div>
                                <div class="filters-check-item">
                                    <input type="checkbox" id="filter2">
                                    <label for="filter2">Стразовые в золоте</label>
                                </div>
                                <div class="filters-check-item">
                                    <input type="checkbox" id="filter3">
                                    <label for="filter3">Жемчужные</label>
                                </div>
                                <div class="filters-check-item">
                                    <input type="checkbox" id="filter4">
                                    <label for="filter4">Цветочные</label>
                                </div>
                                <div class="filters-check-item">
                                    <input type="checkbox" id="filter5">
                                    <label for="filter5">Крупные</label>
                                </div>
                            </div>
                        </div>
                        <div class="filters-block">
                            <div class="filters-title">
                                ЦЕНА:
                            </div>
                            <div class="filters-content fromto-block">
                                <div class="fromto clearfix">
                                    <div class="fromto-item">
                                        <div class="input">
                                            от
                                            <input type="text" value="5500" class="fromto-item-val from">
                                        </div>
                                    </div>
                                    <div class="fromto-item">
                                        <div class="input">
                                            до
                                            <input type="text" value="17700" class="fromto-item-val to">
                                        </div>
                                    </div>
                                </div>
                                <div class="filter-slider">
                                    <div class="filter-slider-item">
                                        <span class="filter-slider-min">0</span>
                                        <span class="filter-slider-max">20000</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="filters-block">
                            <div class="filters-title">
                                ЦВЕТ:
                            </div>
                            <div class="filters-content">
                                <ul class="colors-list">
                                    <li class="colors-list-item"><span class="color-icon"
                                                                       style="background-color: #FFFFFF"></span></li>
                                    <li class="colors-list-item"><span class="color-icon"
                                                                       style="background-color: #eff2f4"></span></li>
                                    <li class="colors-list-item active"><span class="color-icon"
                                                                              style="background-color: #ed1a3a"></span>
                                    </li>
                                    <li class="colors-list-item"><span class="color-icon"
                                                                       style="background-color: #abecff"></span></li>
                                    <li class="colors-list-item"><span class="color-icon"
                                                                       style="background-color: #3c6ce4"></span></li>
                                    <li class="colors-list-item"><span class="color-icon"
                                                                       style="background-color: #c691f0"></span></li>
                                    <li class="colors-list-item"><span class="color-icon"
                                                                       style="background-color: #f7cc4d"></span></li>
                                    <li class="colors-list-item"><span class="color-icon"
                                                                       style="background-color: #4feedb"></span></li>
                                    <li class="colors-list-item"><span class="color-icon"
                                                                       style="background-color: #a7e351"></span></li>
                                </ul>
                            </div>
                        </div>
                    </div>
